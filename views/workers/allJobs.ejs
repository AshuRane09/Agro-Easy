<a href="/worker" class="btn btn-success mr-3 mb-3">&#x2B9C; Back</a>


<div class="row" style="padding-bottom: 10vh">


<div class="col-md-6 offset-md-3">

<div
  class="
    input-group
    bg-light
    rounded rounded-pill
    border-2
    shadow-md
    border-warning
    mb-4
  "

>
  <input
    type="text"
    class="form-control rounded rounded-pill border-0 bg-light"
    id="search"
    oninput="searchJob();"
    placeholder="What're you searching for?"
    aria-describedby="button-addon1"
  />
  <div class="input-group-append">
    <button id="button-addon1" type="submit" class="btn btn-link text-primary">
      <i class="fa fa-search"></i>
    </button>
  </div>
</div>

</div>

<h1>Farm Jobs near you</h1>


  <% for (let job of jobs){%>
  <div class="col-md-3 col-sm-6 jobCard">
    <div class="card card-job border shadow mb-3" style="border-radius: 15px;">
      <a
        href="/worker/jobs/<%=job._id%>"
        class="text-decoration-none text-dark"
      >
      <div class="card-body rounded-2" style="min-height: 50vh;">
        <h5 class="card-title"><%= job.name.substr(0,30) %></h5>
        <h4 class="card-text mr-3 d-none"><%= job.address + ","+ job.city %> </h4>

        <p class="card-text"><%= job.description.substr(0,80) %> ...</p>

        <% let skills = job.skills.split(",").slice(0,-1); %> <%for (let skill
        of skills) { %>
        <p class="btn btn-warning border"><b><%= skill %></b></p>

        <% } %>
        <p class="btn btn-info"><%= job.gender %></p>

        <div class="d-flex flex-row">
          <h4 class="card-text mr-5">
            <span class="notranslate">&#8377;</span><%= job.wage %>/day
          </h4>

          <h6 class="card-text mr-3"><%= job.quantity %> remaining</h6>

        </div>
        
        <div class="d-flex ">
            <img src = "/Asset/location-small.png" class = "" alt = "Rounded Image" width = "30" height = "30">
             <h5 class=" ml-3"><%= job.city%></h5>

        </div>
                

        
          
        
      </div>
    </a>
    </div>
  </div>

  <% }%>
</div>
